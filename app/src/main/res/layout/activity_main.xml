<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        tools:context=".ui.MainActivity">
    <TextView
            android:text="yet another title"

            android:layout_marginBottom="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_result" />
    <Button
            android:text="leak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_leak" />
    <Button
            android:text="nonleak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_nonleak" />

    <Button
            android:text="leak from VM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_vm_leak" />
    <Button
            android:text="leak from VM safe"
            android:id="@+id/button_vm_nonleak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
            android:id="@+id/button_vmsafe_leak"
            android:text="leak from VM real-safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
            android:id="@+id/button_vmsafe_nonleak"
            android:text="nonleak from VM real-safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>